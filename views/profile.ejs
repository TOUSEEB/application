<h1>profile</h1>

<%if(student.id==profile_user.id){%>
<!-- if student matches then show the form -->
<form action="/student/update/<%=profile_user.id%>" method="post">
  <input
    type="text"
    name="name"
    placeholder="your name"
    value="<%=profile_user.name%>"
    required
  />
  <input type="submit" value="submit" />
</form>

<%}else{%>
<p><%=profile_user.name %></p>

<%}%>
